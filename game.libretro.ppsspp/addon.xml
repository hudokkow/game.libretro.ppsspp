<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.ppsspp"
		name="PSP (ppsspp)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.ps" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_android="game.libretro.ppsspp.so"
			library_linux="game.libretro.ppsspp.so"
			library_osx="game.libretro.ppsspp.dylib"
			library_windx="game.libretro.ppsspp.dll"
			library_wingl="game.libretro.ppsspp.dll">
		<platforms>PSP</platforms>
		<extensions>psp</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">ppsspp v1.0.1</summary>
		<description>Source: https://github.com/libretro/libretro-ppsspp</description>
		<platform>all</platform>
	</extension>
</addon>
